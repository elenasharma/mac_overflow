<section class="login_lightbox">
  <!-- ../log_in is a fragile path use path helpers -->
  <%=form_tag '../log_in' do%>
  <%=label_tag :username %>
  <%=text_field_tag :username %><br>

  <%=label_tag :password %>
  <%=password_field_tag :password %><br><br>

  <%=submit_tag "Log in" , class:"button"%>
  <% end %>
</section>
