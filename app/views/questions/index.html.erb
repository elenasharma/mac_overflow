<p style="text-align: center; font-size: 22px;">Recently Asked Questions</p>

<% if current_user %>
  <div class="new_question_button"> <%= button_to 'Ask a New Question', new_question_path, class: "button" %></div><br><br>
<% end %>

<% @questions.each do |question| %>
<article class="question_container">
  <p><%= link_to question.title, question_path(question) %><span class="question_author"> by <%= question.user.username %><br>
  <%= question.created_at %></span></p>

</article>
<% end %>

<script>	
var questions = document.getElementsByClassName('question_container');
	for (var i = 0; i < questions.length; i++){
		if (i % 2 == 1){
			questions[i].setAttribute("id","odd") 
		}
	}
</script>