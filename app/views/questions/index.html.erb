<p style="text-align: center;">Recently Asked Questions</p>

<% if current_user %>
  <p><%= link_to 'New Question', new_question_path, class: "new_question_link" %></p>
<% end %>

<% @questions.each do |question| %>
<article class="question_container">
  <h3><%= link_to question.title, question_path(question) %></h3>
</article>
<% end %>


<script> 
var questions = document.getElementsByClassName('question_container');
	for (var i = 0; i < questions.length; i++){
		if (i % 2 == 1){
			questions[i].setAttribute("id","odd") 
		}
	}
</script>