<h1><%= @question.title %></h1>
<hr>
<p><b>Question:</b>  <%= @question.body %></p>
<hr>

<h3>Answers: <%= @answers.size %></h3>
<hr>
<% @answers.each do |answer| %>
<div class="answers_container">
  <p><b>Answer:</b>  <%= answer.body %></p>
  <p>Vote Count:  <%= answer.votes.size %></p>
  <% answer.responses.each do |response| %>
  <p><b>Response:</b>  <%= response.body %></p>
  <% end %>
</div>
<hr>
<% end %>

<%= render 'answer_form' %>